generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
  id        Int       @id @default(autoincrement())
  full_name String
  avatar    String
  Clients   Clients[]
}

model Clients {
  id           Int    @id @default(autoincrement())
  full_name    String
  avatar       String
  phone_number String
  mail         String
  organization String
  status       String @default("active")
  userId       Int
  Users        Users  @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
